<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppTheme.Light.NoActionBar"/>


    <style name="Theme.AppTheme.Light.NoActionBar" parent="@style/Base.AppTheme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.AppTheme.Light" parent="@style/Theme.AppCompat.Light">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/google_blue600</item>
        <item name="colorPrimary">@color/google_blue600</item>
        <item name="colorPrimaryDark">@color/google_blue600</item>


        <item name="positiveButton">@style/Widget.AppTheme.PrimaryButton</item>
        <item name="negativeButton">@style/Widget.AppTheme.SecondaryButton</item>

        <item name="textAppearanceHeadline1">@style/TextAppearance.AppTheme.H1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.AppTheme.H2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.AppTheme.H3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.AppTheme.H4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.AppTheme.H5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.AppTheme.H6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.AppTheme.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.AppTheme.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.AppTheme.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.AppTheme.Body2</item>
    </style>


    <style name="Widget.AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/mtrl_btn_shape</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.AppTheme.Button</item>
    </style>
    <style name="Widget.AppTheme.PrimaryButton" parent="Widget.AppTheme.Button">
        <item name="android:backgroundTint">?colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Widget.AppTheme.SecondaryButton" parent="Widget.AppTheme.PrimaryButton">
        <item name="android:backgroundTint">@color/google_blue100</item>
        <item name="android:textColor">@color/google_blue600</item>
    </style>


    
    
    
    
    
    
    
    
    

    <!--=======================================================================-->

    <style name="TextAppearance.AppTheme.HeaderFonts" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/product_sans_bold</item>
    </style>
    <style name="TextAppearance.AppTheme.SubHeaderFonts" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/google_sans_medium</item>
    </style>
    <style name="TextAppearance.AppTheme.BodyFonts" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/product_sans_regular</item>
    </style>

    
    

    <!-- Header Text Style -->
    <style name="TextAppearance.AppTheme.H1" parent="TextAppearance.AppTheme.HeaderFonts">
        <item name="android:textSize">99.45dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.094</item>
    </style>

    <style name="TextAppearance.AppTheme.H2" parent="TextAppearance.AppTheme.HeaderFonts">
        <item name="android:textSize">62.16dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.031</item>
    </style>

    <style name="TextAppearance.AppTheme.H3" parent="TextAppearance.AppTheme.HeaderFonts">
        <item name="android:textSize">49.72dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0</item>
    </style>

    <style name="TextAppearance.AppTheme.H4" parent="TextAppearance.AppTheme.HeaderFonts">
        <item name="android:textSize">35.22dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.016</item>
    </style>

    <style name="TextAppearance.AppTheme.H5" parent="TextAppearance.AppTheme.HeaderFonts">
        <item name="android:textSize">24.84dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0</item>
    </style>

    <style name="TextAppearance.AppTheme.H6" parent="TextAppearance.AppTheme.HeaderFonts">
        <item name="android:textSize">20.72dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.016</item>
    </style>


    <!-- Body Text Style -->
    <style name="TextAppearance.AppTheme.Body1" parent="TextAppearance.AppTheme.BodyFonts">
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.031</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2" parent="TextAppearance.AppTheme.BodyFonts">
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.016</item>
    </style>

    <style name="TextAppearance.AppTheme.Body2.Colored" parent="TextAppearance.AppTheme.BodyFonts">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">?colorAccent</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.016</item>
    </style>


    <!-- Subtitle Text Style -->
    <style name="TextAppearance.AppTheme.Subtitle1" parent="TextAppearance.AppTheme.SubHeaderFonts">
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.009</item>
    </style>

    <style name="TextAppearance.AppTheme.Subtitle2" parent="TextAppearance.AppTheme.SubHeaderFonts">
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.006</item>
    </style>


    <!-- Button Text Style -->
    <style name="TextAppearance.AppTheme.Button" parent="TextAppearance.AppTheme.BodyFonts">
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.078</item>
    </style>


    <!-- Caption Text Style -->
    <style name="TextAppearance.AppTheme.Caption" parent="TextAppearance.AppTheme.BodyFonts">
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.025</item>
    </style>


    <!-- Overline Text Style -->
    <style name="TextAppearance.AppTheme.Overline" parent="TextAppearance.AppTheme.BodyFonts">
        <item name="android:textSize">14dp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.125</item>
    </style>


</resources>
