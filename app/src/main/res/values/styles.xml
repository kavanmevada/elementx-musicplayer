<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">#00FFFFFF</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">#00FFFFFF</item>
        <item name="android:windowBackground">@android:color/white</item>



        <!--Google Theming-->
        <item name="textAppearanceSubhead1">@style/TextAppearance.GoogleMaterial.Subhead1</item>
    </style>

    <style name="Widget.Material.Button.UnelevatedButton" parent="TextAppearance.AppCompat.Button">
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/mtrl_btn_shape</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>


    <style name="TextAppearance.GoogleMaterial.Subhead1" parent="@style/TextAppearance.AppCompat">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:letterSpacing">0.0</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>

</resources>
