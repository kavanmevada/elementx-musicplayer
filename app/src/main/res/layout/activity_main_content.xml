<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dip"
            android:background="@drawable/card_view">

        <ImageView android:layout_gravity="end|center|top"
                   android:id="@+id/close_button"
                   android:padding="12.0dip"
                   android:layout_width="42.0dip"
                   android:layout_height="42.0dip"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Enjoing Google Podcasts ?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:textAppearance="?textAppearanceSubhead1"
                    android:layout_marginTop="16.0dip" android:textAlignment="center"
                    android:fontFamily="@font/product_sans_regular"/>

            <LinearLayout android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="10.0dip" android:gravity="center_horizontal">
                <Button
                        android:textColor="#1758D9"
                        android:id="@+id/could_be_better_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8.0dip"
                        android:text="Could Be Better"
                        android:backgroundTint="#E3EBF3" style="@style/Widget.Material.Button.UnelevatedButton"/>

                <Button
                        android:textColor="#FFF"
                        android:id="@+id/love_it_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8.0dip"
                        android:text="Love it"
                        android:backgroundTint="#2A63D1" style="@style/Widget.Material.Button.UnelevatedButton"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
    <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/viewPager"/>
</LinearLayout>