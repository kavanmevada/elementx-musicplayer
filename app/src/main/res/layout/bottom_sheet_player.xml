<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/bottom_sheet"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:behavior_peekHeight="60dip"
              android:orientation="vertical"
              android:background="#FFF"
              app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <!--android:background="#F6F7F8"-->


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp" android:gravity="center_vertical" android:layout_marginBottom="-60dip"
            android:visibility="gone" android:id="@+id/option_panel"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="42dip"
                android:layout_height="42dip"
                android:layout_marginStart="8dip"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/artwork"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dip"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/product_sans_bold"
                    android:singleLine="true"
                    android:text="How Things Sprade"
                    android:textColor="#18191A"/>

            <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dip"
                    android:singleLine="true"
                    android:text="7 min left"
                    android:textColor="#36383D"/>
        </LinearLayout>

        <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="42dip"
                android:layout_height="42dip"
                android:layout_marginStart="8dip"
                android:layout_marginEnd="16dip"
                android:background="@null"
                android:src="@drawable/ic_play_arrow_24px"/>
    </LinearLayout>

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="1dip"
            android:minHeight="1dip"
            android:progress="50"
            android:progressBackgroundTint="#CED1D6"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" android:layout_weight="1" android:paddingStart="16dip"
            android:paddingEnd="16dip">

        <ImageView
                android:id="@+id/imageView2"
                android:layout_width="360dip"
                android:layout_height="360dip"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/artwork" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />

        <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_bold"
                android:singleLine="true"
                android:text="How Things Sprade"
                android:textAlignment="center"
                android:textColor="#18191A"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>

        <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_regular"
                android:singleLine="true"
                android:text="Micheal Jackson"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" app:layout_constraintTop_toBottomOf="@+id/textView3"
                android:id="@+id/linearLayout4"
                android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.23000002"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:20"/>

            <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:progress="60"/>

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03:20"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="62dip" android:id="@+id/linearLayout3"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="32dp">
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_skip_previous_24px"
                    android:id="@+id/imageButton3" android:background="@null" android:scaleType="fitCenter"
                    android:layout_weight="3" android:layout_marginTop="8dip" android:layout_marginBottom="8dip"/>
            <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_play_arrow_24px" android:layout_weight="4"/>
            <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/ic_skip_next_24px"
                    android:id="@+id/imageButton2" android:background="@null" android:scaleType="fitCenter"
                    android:layout_weight="3" android:layout_marginTop="8dip" android:layout_marginBottom="8dip"/>
        </LinearLayout>
        <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_regular"
                android:singleLine="true"
                android:text="Connected to Headphone"
                android:textAlignment="center"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>