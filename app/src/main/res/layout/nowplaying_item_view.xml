<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="user" type="elementx.test.musicplayer.User"/>
    </data>

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
        <ImageView
                android:id="@+id/artwork"
                android:layout_width="match_parent"
                android:layout_height="360dip"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/artwork" android:layout_marginTop="4dip" android:layout_marginStart="24dip"
                android:layout_marginEnd="24dip"/>
        <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_bold"
                android:singleLine="true"
                android:text="How Things Sprade"
                android:textAlignment="center"
                android:textColor="#18191A"
                android:textSize="24sp"
                android:layout_marginTop="24dip"/>
        <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/product_sans_regular"
                android:singleLine="true"
                android:text="Micheal Jackson"
                android:textAlignment="center"
                android:layout_marginTop="8dp"/>
    </LinearLayout>

</layout>
